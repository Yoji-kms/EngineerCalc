<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calcSmallTxtViewId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical|end"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calcMainTxtView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical|end"
        android:textSize="60sp" />

    <Switch
        android:id="@+id/showEngFunSwId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_engineer_functions"
        android:textSize="20sp"
        android:layout_gravity="end"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/simple_layout" />

            <include layout="@layout/engineer_layout" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>